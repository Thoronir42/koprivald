<div class="image-gallery <%- className %>">
    <div class="items">
        <% images.forEach((img) => { %>
            <div class="item" style="--img: url('<%- img.variants.small.src %>')">
                <!--<img src="<%= img.variants.small.src %>"
             alt="<%= img.caption %>"
             data-full="<%= img.variants.full && img.variants.full.src %>"
             width="<%= img.variants.small.width %>" height="<%= img.variants.small.height %>"
        >-->
            </div>
        <% }) %>
    </div>

    <div class="positioner">
        <% images.forEach((img, i) => { %>
            <div class="peg <%- i === 0 ? 'active' : '' %>">
                <div class="body"></div>
            </div>
        <% }) %>
    </div>
</div>
